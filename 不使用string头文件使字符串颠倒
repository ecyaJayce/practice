#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
void Reverse_String(char arr[],int left,int right)
{
	char temp = '0';
	if (left <= right)
	{
		temp = arr[left];
		arr[left] = arr[right];
		arr[right] = temp;
		Reverse_String(arr, left + 1, right - 1);
	}
}
int main()
{
	char arr[] = "abcdef";
	int sz = sizeof(arr) / sizeof(arr[0]);
	int left = 0;
	int right = sz - 2;
	Reverse_String(arr, left,right);
	printf("%s", arr);
	return 0;
}
