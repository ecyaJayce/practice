#include<stdio.h>
int main()
{
	int i=0;
	int j=0;
	int k=0;
	int z=5;//scanf("%c",&a);z=a-65;
	char let[27]={"ABCDEFGHIJKLMNOPQRSTUVWXYZ"};
	for(i=0;i<z;i++)
	{
		for(k=0;k<z-i-1;k++)
		{
			printf(" ");
		}
		for(j=0;j<i;j++)
		{
			printf("%c",let[j]);
		}
		for(j=i;j>=0;j--)
		{
			printf("%c",let[j]);
		}
		printf("\n");
	}
	return 0;
}
