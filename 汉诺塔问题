#include <stdio.h>
#include <string.h>
/*
 算法思路：1将 n-1个盘子先放到B座位上
          2.将A座上地剩下的一个盘移动到C盘上
          3、将n-1个盘从B座移动到C座上
          n=1时，直接从A座移动到C座
          n=2时，其实是将n=1时的C座视作在B座，讲A座的大盘移动到C座，再将B座移动到C座其实是重复把A移动到C座只是此时的B座看成A座
*/

void move(char x,char y)
{
  printf("%c--->%c",x,y);
}

void hannuo(int n,char one ,char two,char three)
{
  if(n==1)
    move(one, three); //递归截止条件
  else
  {
    hannuo(n-1,one ,three,two);//将 n-1个盘子先放到B座位上 对应n=2时候的将C座视作B座
    move(one,three);//将A座上地剩下的一个盘移动到C盘上       对应n=2时候的将A座的大盘移动到C座
    hannuo(n-1,two,one,three);//将n-1个盘从B座移动到C座上  对应n=2时候的将B座看成A座
  }
}

 
int main()
{
 int n=0;
 printf("input your number");
 scanf("%d",&n);
 hannuo(n,'A','B','C');
 return 0;
}
